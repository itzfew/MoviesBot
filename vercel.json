{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "node_modules/tesseract.js-core/**/*",
          "node_modules/tesseract.js/src/worker.min.js",
          "node_modules/tesseract.js-ocr-traineddata/4.0.0/eng.traineddata.gz"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ],
  "functions": {
    "api/index.ts": {
      "memory": 2048,
      "maxDuration": 60
    }
  }
}
